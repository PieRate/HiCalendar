<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!-- This layout is currently unused -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/subtitle_hour_label"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/textViewHourLabel" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinner_hour"
        android:layout_below="@id/textViewHourLabel"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:entries = "@array/month_name_array"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/subtitle_minute_label"
        android:id="@+id/textViewMinuteLabel"
        android:layout_toRightOf="@id/spinner_hour"
        android:layout_toEndOf="@id/spinner_hour"
        />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinner_minute"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/spinner_hour"
        android:layout_toEndOf="@id/spinner_hour"
        android:layout_below="@id/spinner_minute"
        android:entries = "@array/month_name_array"/>

    
</RelativeLayout>