<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="wangyijieholding.agendaapplication">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".calendar.NewEventActivity"
            android:label="@string/new_event"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".calendar.DayDetailActivity"
            android:label="@string/title_activity_day_detail"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".calendar.EditEventActivity"
            android:windowSoftInputMode="stateHidden" />
        <activity android:name=".userpools.ForgotPasswordActivity"
            android:label="@string/title_activity_forgot_password"/>
        <activity android:name=".userpools.MFAActivity"/>
        <activity android:name=".userpools.SignInActivity"
            android:label="@string/title_activity_sign_in"/>
        <activity android:name=".userpools.SignUpActivity"
            android:label="@string/title_activity_sign_up"/>
        <activity android:name=".userpools.SignUpConfirmActivity"
            android:label="@string/title_activity_sign_up_confirm"/>
        <activity
            android:name=".util.SettingsActivity"
            android:label="@string/title_activity_settings">
            <intent-filter>
                <action android:name="android.intent.action.MANAGE_NETWORK_USAGE" />
            </intent-filter>
        </activity>

        <service
            android:name=".util.ClockAlarmService"
            android:exported="false" />

    </application>

</manifest>